<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vk.agen.agen.UI.ReportActivity">

    <TextView
        android:id="@+id/text_view_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выполнено:"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:indeterminate="false"
        android:progress="60"
        android:progressTint="@android:color/holo_green_light" />

    <TextView
        android:id="@+id/text_view_dit_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Подробнее..."
        android:textColor="@color/colorPrimary"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/text_view_transfers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Переносы:"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:progress="20"
        android:progressTint="@android:color/holo_orange_dark" />

    <TextView
        android:id="@+id/text_view_dit_t"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Подробнее..."
        android:textColor="@color/colorPrimary"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/text_view_dumps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Отвалы:"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar4"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:progress="20"
        android:progressTint="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/text_view_dit_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Подробнее..."
        android:textColor="@color/colorPrimary"
        android:textSize="24sp" />
</LinearLayout>
